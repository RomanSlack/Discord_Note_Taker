# Discord Configuration
# Required: Your Discord bot token from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Required: Your Discord application client ID
DISCORD_CLIENT_ID=your_discord_client_id_here

# Optional: Specific guild ID to restrict bot to one server (recommended for development)
DISCORD_GUILD_ID=your_guild_id_here

# Voice Configuration
# Segment window in seconds for audio processing (default: 300 = 5 minutes)
SEGMENT_WINDOW_SEC=300

# Maximum concurrent voice connections (default: 10)
MAX_CONCURRENT_CONNECTIONS=10

# Voice connection timeout in milliseconds (default: 30000 = 30 seconds)
VOICE_TIMEOUT=30000

# Number of reconnection attempts before giving up (default: 3)
RECONNECT_ATTEMPTS=3

# API Configuration
# Optional: AssemblyAI API key for transcription services
ASSEMBLY_AI_API_KEY=your_assembly_ai_api_key_here

# Optional: OpenAI API key for AI responses
OPENAI_API_KEY=your_openai_api_key_here

# Logging Configuration
# Log level: error, warn, info, debug (default: info)
LOG_LEVEL=info

# Whether to write logs to files (default: true)
LOG_TO_FILE=true

# Development Configuration
# Environment: development, production (default: development)
NODE_ENV=development

# Enable debug mode for verbose logging (default: false)
DEBUG_MODE=false