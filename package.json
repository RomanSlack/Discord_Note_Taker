{
  "name": "discord-voice-companion-bot",
  "version": "1.0.0",
  "description": "A Discord bot that listens to voice channels, transcribes conversations, and provides AI-powered responses",
  "main": "dist/bot/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/bot/index.js",
    "dev": "ts-node src/bot/index.ts",
    "watch": "tsc --watch",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "deploy-commands": "ts-node scripts/deploy-commands.ts",
    "verify": "ts-node scripts/verify-setup.ts",
    "test-summarization": "ts-node scripts/test-summarization.ts",
    "setup": "npm install && npm run verify && npm run deploy-commands"
  },
  "keywords": [
    "discord",
    "bot",
    "voice",
    "transcription",
    "ai",
    "companion"
  ],
  "author": "Roman",
  "license": "MIT",
  "dependencies": {
    "discord.js": "^14.16.3",
    "@discordjs/voice": "^0.18.0",
    "@discordjs/opus": "^0.9.0",
    "dotenv": "^16.4.5",
    "winston": "^3.14.2",
    "prism-media": "^1.3.5",
    "libsodium-wrappers": "^0.7.15",
    "ws": "^8.18.0",
    "assemblyai": "^4.9.0",
    "node-ffmpeg": "^0.6.2",
    "fluent-ffmpeg": "^2.1.3",
    "lz4": "^0.6.5",
    "openai": "^4.75.1",
    "pdfkit": "^0.15.1"
  },
  "devDependencies": {
    "typescript": "^5.6.2",
    "@types/node": "^22.5.4",
    "@types/ws": "^8.5.12",
    "@types/fluent-ffmpeg": "^2.1.25",
    "@types/pdfkit": "^0.13.5",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "eslint": "^9.10.0",
    "ts-node": "^10.9.2",
    "rimraf": "^6.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}